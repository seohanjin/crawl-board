<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.example.demo.repository.CrawlLogRepository">

    <select id="getCrawlLogList" resultType="com.example.demo.dto.CrawlLogDto">
        select * from crawl_log cl order by id desc limit 10 offset #{offset}
    </select>

    <select id="getCrawlLogTotCnt" resultType="int">
        select count(1) as tot_cnt from crawl_log cl
    </select>

</mapper>